<% achieved = @user.achieved(prize) %>
<div class="prize <%= 'active-prize' if achieved %> prize">
  <span class="prize-number">
    <%= prize.number_of_referrals %>
    <span>friends</span>
  </span>
  <p class="prize-name">
    <%= prize.name %>
  </p>
  <% if prize.image.present? %>
    <%= image_tag(prize.image.url, width: 190, height: 250, style: "top: -330px") %>
  <% end %>
</div>
