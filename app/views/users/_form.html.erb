<%= simple_form_for @user, html: {novalidate: false, class: "form-inline"} do |f| %>
  <%= f.input :email, as: :email, label: false, placeholder: "Enter Email", input_html: {required: true } %>
  <div class="form-group submit">
    <%= f.button :submit, "REQUEST ACCESS", class: "btn btn-branded" %>
  </div>
<% end %>
